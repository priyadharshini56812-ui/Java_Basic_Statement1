import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        double x=sc.nextDouble();
        double a=sc.nextDouble();
        double b=sc.nextDouble();
        double profit=x*(a-b)-100;
        System.out.printf("Number of copies sold:%.0f\n",x);
        System.out.printf("Cost of each copy:%.0f\n",a);
        System.out.printf("Cost spent by agency on each newspaper:%.0f\n",b);
        System.out.printf("The profit obtained is Rs.%.2f\n",profit);
        
        
    }
}
